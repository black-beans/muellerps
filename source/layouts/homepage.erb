<% wrap_layout :layout do %>

    <div class="row">
      <div class="large-12 columns">

        <!-- Desktop Slider -->

        <div class="slideshow-wrapper hide-for-small hide-on-print">
          <div class="preloader"></div>
          <ul id="featured" data-orbit data-options="timer_speed: 3000; animation: fade; pause_on_hover:false; bullets: false; slide_number_text: von;">
            <li>
              <%= image_tag('slideshow/Arbeitssicherheit-Scheifmaschine.jpg', alt: 'Arbeitssicherheit bei Maschinen') %>
            </li>
            <li>
              <%= image_tag('slideshow/Arbeitssicherheit.jpg', alt: 'Überprüfung Arbeitssicherheit') %>
            </li>
            <li>
              <%= image_tag('slideshow/BMA-MPS.jpg', alt: 'Brandmeldeanlage') %>
            </li>
            <li>
              <%= image_tag('slideshow/Brandschutz.jpg', alt: 'Brandschutzübung') %>
            </li>
            <li>
              <%= image_tag('slideshow/Evakuation.jpg', alt: 'Schulung Evakuation im Notfall') %>
            </li>
            <li>
              <%= image_tag('slideshow/MPS-EKAS-6508-ASA.jpg', alt: 'Voreschrift EKAS-6508-ASA') %>
            </li>
            <li>
              <%= image_tag('slideshow/MPS-Sauber.jpg', alt: 'Arfbeitssicherheit bei Sauber') %>
            </li>
            <li>
              <%= image_tag('slideshow/Notaus.jpg', alt: 'Arbeitssicherheit bei Maschinen') %>
            </li>
            <li>
              <%= image_tag('slideshow/Notfall.jpg', alt: 'Schulung für den Notfall') %>
            </li>
            <li>
              <%= image_tag('slideshow/Baukreissaege.jpg', alt: 'Arbeitssicherheit bei Maschinen') %>
            </li>
            <li>
              <%= image_tag('slideshow/SIBE_Schulung_SUVA.jpg', alt: 'SIBE Schulung SUVA') %>
            </li>
          </ul>
        </div>

        <!-- End Desktop Slider -->


        <!-- Mobile Header -->

        <div id="mobile-header" class="show-for-small">
            <%= image_tag('slideshow/mobile/evakuation.jpg') %>
        </div>

        <!-- End Mobile Header -->

      </div>
    </div>
    <br>

    <div class="row hide-on-print">
      <div class="large-12 columns">
        <div class="row thumbnails">

          <!-- Thumbnails -->

          <% link_to '/notfallmanagement.html' do %>
              <div align="center" class="large-3 small-6 columns">
                <%= image_tag('symbole/notfallmanagement.png', alt: 'Notfallmanagement') %>
                <h6 align="center">Notfallmanagement</h6>
              </div>
          <% end %>

          <% link_to '/arbeitssicherheit.html' do %>
              <div align="center" class="large-3 small-6 columns">
                <%= image_tag('symbole/arbeitssicherheit.png', alt: 'Arbeitssicherheit') %>
                <h6 align="center">Arbeitssicherheit</h6>
              </div>
          <% end %>

          <% link_to '/brandschutz.html' do %>
              <div align="center" class="large-3 small-6 columns">
                <%= image_tag('symbole/brandschutz.png', alt: 'Brandschutz') %>
                <h6 align="center">Brandschutz</h6>
              </div>
          <% end %>

          <% link_to '/schulungen.html' do %>
              <div align="center" class="large-3 small-6 columns">
                <%= image_tag('symbole/schulungen.png', alt: 'Schulungen') %>
                <h6 align="center">Schulungen</h6>
              </div>
          <% end %>

          <!-- End Thumbnails -->

        </div>
      </div>
    </div>

    <div class="row">
      <div class="large-12 columns" role="content">
        <article>
          <%= yield %>
        </article>
      </div>
    </div>


    <div class="row">
      <div class="large-12 columns">
        <div class="row">

          <!-- Content -->

          <div class="large-8 columns">
            <div class="panel radius">

              <div class="row">
                <div class="large-12 small-12 columns">

                  <h4>MPS Müller Projects &amp; Services GmbH</h4>
                  <hr/>

                  <h5 class="subheader">
                    Wir sind ein Unternehmen, das sich seit 2002 auf Notfallmanagement, Arbeitssicherheit, Brandschutz
                    und Schulungen spezialisiert hat.
                  </h5>

                  <div class="show-for-small hide-on-print" align="center">
                    <%= link_to 'Offizielle SUVA Kurse', '/kurse.html', class: 'small radius button' %>
                    <%= link_to 'Kontaktieren Sie uns', '/kontakt.html', class: 'small radius button' %>
                  </div>

                </div>
              </div>
            </div>
          </div>

          <div class="large-4 columns hide-for-small hide-on-print">

            <% link_to '/kurse.html' do %>
                <div class="panel radius callout" align="center">
                  <p>Kurse / Trainings / Schulungen</p>
                </div>
            <% end %>

            <% link_to '/kontakt.html' do %>
                <div class="panel radius callout" align="center">
                  <p>Kontaktieren Sie uns</p>
                </div>
            <% end %>

          </div>

          <!-- End Content -->

        </div>
      </div>
    </div>


    <div class="row hide-on-print">
      <div class="large-12 columns">
        <div class="row thumbnails">

          <!-- Thumbnails -->

          <% link_to '/downloads.html' do %>
              <div align="center" class="large-3 small-6 columns">
                <%= image_tag('symbole/downloads.png', alt: 'Downloads') %>
                <h6 align="center">Downloads</h6>
              </div>
          <% end %>

          <% link_to '/partner.html' do %>
              <div align="center" class="large-3 small-6 columns">
                <%= image_tag('symbole/partner.png', alt: 'Partner') %>
                <h6 align="center">Partner</h6>
              </div>
          <% end %>

          <% link_to '/referenzen.html' do %>
              <div align="center" class="large-3 small-6 columns">
                <%= image_tag('symbole/referenzen.png', alt: 'Referenzen') %>
                <h6 align="center">Referenzen</h6>
              </div>
          <% end %>

          <% link_to '/kurse.html' do %>
              <div align="center" class="large-3 small-6 columns">
                <%= image_tag('symbole/kurse.png', alt: 'Kurse') %>
                <h6 align="center">Kurse</h6>
              </div>
          <% end %>

          <!-- End Thumbnails -->

        </div>
      </div>
    </div>

<% end %>
