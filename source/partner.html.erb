<h1>Partner</h1>

<div class="section-container accordion" data-section="accordion">

  <% current_page.data.partners.each do |partner| %>

      <section>
        <p class="title" data-section-title><a href='#<%= partner.name.downcase.gsub(' ', '-').gsub(/[^a-z-]/, '').gsub('--', '-') %>'><%= partner.name %></a></p>
        <div class="content" data-section-content>
          <div class="row">
            <div class="large-3 small-3 columns">
              <%= image_tag "partner/#{ partner.logo }" %>
            </div>
            <div class="large-9 small-9 columns">
              <p>
                <%= partner.description %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="large-12 small-12 columns">
              <p>
                <%= link_to partner.link, "http://#{ partner.link }" %>
              </p>
            </div>
          </div>
        </div>
      </section>

  <% end %>
</div>
